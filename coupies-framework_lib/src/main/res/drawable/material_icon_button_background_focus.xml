<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
		<!-- inner circle -->
		<shape 
    		android:shape="ring"
    		android:innerRadius="0dp"
	        android:thickness="32dp"
	        android:useLevel="false"
	        >

		    <size
		        android:width="32dp"
		        android:height="32dp"
		    />
	    	<solid
	        	android:color="@color/white_pressed"/>
		</shape>
    </item>
    <item>
		<!-- outer ring -->
		<shape 
    		android:shape="ring"
	        android:innerRadiusRatio="3"
	        android:thickness="32dp"
	        android:useLevel="false">

		    <size
		        android:width="48dp"
		        android:height="48dp"
		    />
	    	<solid
	        	android:color="@color/white_hovered"/>
		</shape>
    </item>
</layer-list>